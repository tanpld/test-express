extends ../layouts/common
block content
  h1 Users
  .d-flex.flex-row-reverse.mb-3
    a.btn.btn-success(href="/users/create") Create
  form.form-inline(action="/users/search", method="GET", id="search-form")
    .form-group
      input.form-control.mr-3(type="text", name="q", id="search-input", autofocus)
    button.btn.btn-primary Search
  table.table
    thead
      tr
        th ID
        th Name
        th Phone
        th Actions
    tbody
      each user in users
        tr
          td= user.id
          td= user.name
          td= user.phone
          td
            a.btn.btn-info(href="/users/" + user.id) View
  script
    include script.js
